		{{!-- </div> --}}



		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Name</th>
					<th scope="col">Time for booking</th>
					<th scope="col">Day of booking</th>
				</tr>
			</thead>
			<tbody>
				{{#each kittens}}
				<tr>
					<th scope="row">{{id}}</th>
					<td>{{name}}</td>
					<td>{{timestamp}}</td>
					<td>{{arrivingOn}}</td>
				</tr>
				{{/each}}
				
			</tbody>
		</table>
	</div>
</div>



  
